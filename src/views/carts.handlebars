<div>
  <h1>Cart {{_id}} Information</h1>
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Cantidad</th>
        <th>Precio</th>
      </tr>
      {{#each products}}
        <tr>
          <td>{{this.product.title}}</td>
          <td class="product-quantity">{{this.quantity}}</td>
          <td class="product-price">$ {{this.product.price}}</td>
        </tr>
      {{/each}}
    </thead>
  </table>
  <form action="/views/payment-method">
    <button type="submit">Comprar</button>
  </form>

  <footer>
    <a href="/api/sessions/logout" role="button">Salir</a>
    <a href="/views/products" role="button">Ver productos</a>
    <a href="/views/editProducts" role="button">AÃ±adir/Eliminar productos</a>
    <a href="/views/realTimeProducts" role="button">Ver productos en tiempo real</a>
    <a href="/views/chat" role="button">Chat</a>
  </footer>
</div>
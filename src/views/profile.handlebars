<article>
  <header>
    <h1>Te damos la bienvenida 😁</h1>
  </header>
  <div>
    <div>
      <p><strong>Nombre:</strong> {{user.first_name}}</p>
      <p><strong>Apellido:</strong> {{user.last_name}}</p>
      <p><strong>Correo:</strong> {{user.email}}</p>
      <p><strong>Edad:</strong> {{user.age}}</p>
      <p><strong>Rol:</strong> {{user.role}}</p>
    </div>
    <div>
      <h2>Documentos:</h2>
      <ul>
        {{#each user.documents}}
          <li>
            {{this}}
          </li>
        {{/each}}
      </ul>

    </div>
  </div>

  <footer>
    <a href="/api/sessions/logout" role="button">Salir</a>
    <a href="/views/products" role="button">Ver productos</a>
    <a href="/views/editProducts" role="button">Añadir/Eliminar productos</a>
    <a href="/views/realTimeProducts" role="button">Ver productos en tiempo real</a>
    <a href="/views/chat" role="button">Chat</a>
  </footer>
</article>
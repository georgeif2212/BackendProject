<div>
  <h1>Real Time Products</h1>
  <div style="display: flex; justify-content:space-between">
    <div style="width: 40%;">
      <h2>Formulario para crear producto</h2>
      <form id="product-form">
        <label for="title">Título:</label>
        <input id="title" type="text" name="title" required /><br />
        <label for="description">Descripción:</label>
        <input id="description" type="text" name="description" required /><br />
        <label for="category">Categoría:</label>
        <input id="category" type="text" name="category" required /><br />
        <label for="price">Precio:</label>
        <input id="price" type="number" name="price" required /><br />
        <label for="thumbnail">URL de la Imagen (Thumbnail):</label>
        <input id="thumbnail" type="url" name="thumbnail" required /><br />
        <label for="code">Código:</label>
        <input id="code" type="text" name="code" required /><br />
        <label for="stock">Cantidad en Stock:</label>
        <input id="stock" type="number" name="stock" required /><br />
        <input type="submit" value="Enviar" />
      </form>
    </div>
    <div style="width: 40%;">
      <h2>Formulario para eliminar producto</h2>
      <form id="delete-form">
        <label for="id">Id:</label>
        <input id="id" type="text" name="id" required /><br />
        <input type="submit" value="Enviar" />
      </form>
    </div>
  </div>
</div>